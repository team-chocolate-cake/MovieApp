<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.chocolatecake.ui.tv_details.TvDetailsItem.Upper" />

        <variable
            name="rateListener"
            type="com.chocolatecake.viewmodel.tv_details.listener.RateListener" />
        
        <variable
            name="playButtonListener"
            type="com.chocolatecake.viewmodel.tv_details.listener.PlayButtonListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_main_image"
            imageUrl="@{item.upperUiState.backdropImageUrl}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_details"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"
            android:foreground="@drawable/main_image_gradient"
            />

        <View
            android:id="@+id/view_image_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_details"
            android:background="@drawable/main_image_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_main_image" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/spacing_extra_giant_48dp"
            android:layout_height="@dimen/spacing_extra_giant_48dp"
            android:layout_marginEnd="@dimen/spacing_medium_16dp"
            android:layout_marginBottom="@dimen/spacing_tiny_4dp"
            android:onClick="@{()-> playButtonListener.onClickPlayButton()}"
            android:backgroundTint="@color/card"
            android:insetLeft="@dimen/spacing_zero_0dp"
            android:insetTop="@dimen/spacing_zero_0dp"
            android:insetBottom="@dimen/spacing_zero_0dp"
            android:insetRight="@dimen/spacing_tiny_4dp"
            app:icon="@drawable/ic_play"
            app:iconPadding="@dimen/spacing_zero_0dp"
            app:iconSize="24dp"
            app:iconTint="@color/on_background_60"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_main_image"
            app:layout_constraintEnd_toEndOf="@+id/image_view_main_image"
            app:shapeAppearanceOverlay="@style/circleShape" />
        <!--endregion-->

        <!--region info-->
        <TextView
            android:id="@+id/text_view_tv_title"
            style="@style/TextStyle.BodyLarge"
            android:layout_width="@dimen/title_details_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium_16dp"
            android:layout_marginTop="@dimen/spacing_medium_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.upperUiState.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_image_gradient"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:chipSpacingHorizontal="@dimen/spacing_tiny_4dp"
            app:chipSpacingVertical="-8dp"
            app:chips="@{item.upperUiState.genres}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_tv_title" />

        <RatingBar
            android:id="@+id/rating"
            style="@style/CustomRatingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/spacing_medium_16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="@{item.upperUiState.rating}"
            android:stepSize="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip_group_genere" />

        <TextView
            android:id="@+id/text_view_rate_this_tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium_16dp"
            android:onClick="@{()-> rateListener.onRateButtonClick()}"
            android:text="@string/rate_this_tv_show"
            android:textColor="@color/primary"
            app:layout_constraintBottom_toBottomOf="@+id/rating"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium_16dp"
            android:layout_marginTop="@dimen/spacing_medium_16dp"
            android:ellipsize="end"
            android:textColor="@color/on_background_60"
            android:maxLines="8"
            style="@style/TextStyle.BodySmall"
            android:text="@{item.upperUiState.description}"
            app:layout_constraintTop_toBottomOf="@id/rating"
            tools:text="@tools:sample/lorem/random" />
        <!--endregion-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>