<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="background">@color/background</item>
        <item name="android:windowBackground">?attr/background</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.MovieApp</item>
    </style>

    <style name="TextStyle.BodyMedium.SearchBoxStyle">
        <item name="android:background">@drawable/search_edittext_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">search</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16sp</item>

    </style>

    <!--region Font-->
    <style name="TextStyle">
        <item name="android:fontFamily">@font/plus_jakarata_sans</item>
    </style>

    <!--region Title-Font-->
    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontWeight">400</item>
    </style>
    <!--endregion-->

    <!--region Body-Font-->
    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontWeight">400</item>
    </style>
    <!--endregion-->

    <!--region label-Font-->
    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextStyle.LabelMedium">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontWeight">400</item>
    </style>
    <!--endregion-->

    <style name="TextStyle.LabelMedium.ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">@dimen/spacing_medium</item>
        <item name="chipEndPadding">@dimen/spacing_medium</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>
    <!--endregion-->

    <style name="ViewDividerStyle">
        <item name="android:radius">@dimen/radius_full</item>
    </style>

    <!--endregion-->
    <!--region Bottom Navigation-->
    <style name="BottomNavigation">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/on_background_38</item>
        <item name="itemTextAppearanceActive">@color/on_background_87</item>
        <item name="itemTextAppearanceInactive">@color/on_background_38</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_navigation_indicator</item>
    </style>

    <!--endregion-->
</resources>