<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shape_image_view_people_actor"
            android:layout_width="@dimen/width_image_people"
            android:layout_height="@dimen/height_image_people"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_view_name_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/shape_image_view_people_actor"
            app:layout_constraintStart_toStartOf="@+id/shape_image_view_people_actor"
            app:layout_constraintTop_toBottomOf="@+id/shape_image_view_people_actor"
            android:layout_marginTop="@dimen/spacing_tiny_4dp"
            tools:text="Uncle bob" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>